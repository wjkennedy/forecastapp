{
  "name": "jira-forecast-app",
  "version": "1.0.0",
  "description": "Jira what-if forecasting for Forge",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:frontend && npm run copy:static",
    "build:frontend": "cd src/frontend && npm install && npm run build",
    "copy:static": "rm -rf static && mkdir -p static && cp -r src/frontend/build/* static/ && ls -la static/",
    "deploy": "npm run build && forge deploy --no-verify",
    "tunnel": "forge tunnel"
  },
  "dependencies": {
    "@forge/api": "^6.4.3",
    "@forge/bridge": "5.10.2",
    "@forge/react": "11.9.1",
    "@forge/resolver": "1.7.1",
    "@rspack/core": "latest",
    "@vercel/analytics": "1.6.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "duckdb": "1.4.3",
    "html-webpack-plugin": "5.6.6",
    "lucide-react": "0.562.0",
    "next": "16.1.3",
    "next-themes": "0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "seedrandom": "^3.0.5",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "tw-animate-css": "1.4.0",
    "webpack": "latest"
  },
  "devDependencies": {
    "@forge/cli": "^12.13.0",
    "@types/node": "25.0.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  }
}